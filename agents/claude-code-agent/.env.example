# Anthropic API Configuration
# Copy this file to .env and fill in your values

ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: Customize allowed tools (comma-separated)
# Default: Bash,Read,Edit,Write,Grep,Glob
CLAUDE_ALLOWED_TOOLS=Bash,Read,Edit,Write,Grep,Glob

# Optional: Permission mode for Claude Code
# Default: acceptEdits
# Options: acceptEdits, ask, deny
CLAUDE_PERMISSION_MODE=acceptEdits

# Optional: Timeout for Claude Code execution in seconds
# Default: 300 (5 minutes)
CLAUDE_TIMEOUT_SECONDS=300
